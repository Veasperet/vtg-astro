};

function getName(segment){
    return segment.replace(/\.html$/, '');
}

---
<section class="bread-crumbs">
    <ul>
        <li><a href="/index.html">ГЛАВНАЯ</a></li>
        {segments.map((segment, index) => {
             const href = '/' + segments.slice(0, index + 1).join('/');
            const name = names[getName(segment)];
            return (
            <li><a href={href}>{name}</a></li>
          );
        })}
    </ul>
</section>
<style lang="scss">
.bread-crumbs {
    padding-top: 50px;
    padding-left: 50px;

    ul {
        display: flex;
        list-style: none;
        align-items: center;

        li {
            margin-right: 20px;
            display: flex;
            align-items: center;

            a {
                color: black;
                text-decoration: none;
            }

            &::before {
                content: url(/img/arrow.svg);
                width: 15px;
                display: block;
                margin-right: 20px;
            }

            &:first-child::before {
                display: none;
            }
        }
    }

}
</style>