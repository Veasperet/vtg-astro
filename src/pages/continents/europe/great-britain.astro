import { Image } from 'astro:assets';
//Images
import hero from '../../../assets/img/great-britain-hero.jpg';
import great_britain_1 from '../../../assets/img/great-britain-1.jpg';
import great_britain_2 from '../../../assets/img/great-britain-2.jpg';
import great_britain_3 from '../../../assets/img/great-britain-3.jpg';
